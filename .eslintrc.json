{
	"env": {
		"node": true,
		"es2021": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:vue/vue3-essential"
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [
		"vue"
	],
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
		"no-unused-vars": "off",
		"no-async-promise-executor": "off",
		"no-multiple-empty-lines": [
			"error",
			{
				"max": 2,
				"maxEOF": 0
			}
		],
		"vue/no-mutating-props": "off",
		"no-constant-condition": "off",
		"indent": "off",
	}
}